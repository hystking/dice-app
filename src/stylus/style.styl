easeOutQuint = cubic-bezier(0.230, 1.000, 0.320, 1.000)

body
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  // font-family: "YuGothic", "游ゴシック", 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', "Meiryo", "メイリオ", sans-serif
  font-family: "Old Standard TT", serif;
  line-height: 1
  color: #f0f1ee
  
*
  &, &:before, &:after
    box-sizing: border-box

.users
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex

.user
  position: relative
  flex: 1

  &:nth-child(6n + 1)
    background: #f0f1ee
    color: #333
  &:nth-child(6n + 2)
    background: #333332
  &:nth-child(6n + 3)
    background: #1352a2
  &:nth-child(6n + 4)
    background: #ffd464
  &:nth-child(6n + 5)
    background: #fb6964
  &:nth-child(6n + 0)
    background: #13a26f

.user__number
  position: absolute
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  font-size: 16vw
  user-select: none

.user__set-number-button
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

.user__me
  position: absolute
  left: 50%
  top: 25%
  transform: translate(-50%, -50%)
  font-size: 8vw

.slide-enter
  opacity: 0
  transform: translate(-50%, -50%)translateY(-50px)

.slide-enter-active
  transition: opacity 0.3s 0.2s, transform 0.3s 0.2s easeOutQuint
  opacity: 1
  transform: translate(-50%, -50%)

.slide-leave
  opacity: 1
  transform: translate(-50%, -50%)

.slide-leave-active
  transition: opacity 0.2s 0s, transform 0.3s 0s easeOutQuint
  opacity: 0
  transform: translate(-50%, -50%)translateY(50px)
